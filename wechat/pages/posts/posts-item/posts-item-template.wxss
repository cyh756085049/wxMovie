.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-auther-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-auther{
  width: 60rpx;
  height: 60rpx;
  /* 垂直居中排布 */
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  margin-bottom: 5px;
  font-size: 26rpx;
  vertical-align: middle;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  /* 建议水平方向使用rpx,如果只有一个标签也可以使用px，而垂直方向建议使用px */
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-left: 16rpx;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}